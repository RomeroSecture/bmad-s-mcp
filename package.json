{
  "name": "bmad-mcp",
  "version": "1.0.0",
  "description": "BMAD Method MCP Server - AI-driven agile development framework",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "bmad-mcp": "dist/index.js"
  },
  "files": [
    "dist/",
    "content/",
    "_bmad/"
  ],
  "scripts": {
    "build": "tsc",
    "prebuild": "tsx scripts/sync-content.ts",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "sync-content": "tsx scripts/sync-content.ts",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "zod": "^3.25.0",
    "js-yaml": "^4.1.0",
    "csv-parse": "^6.1.0",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "typescript": "^5.8.0",
    "tsx": "^4.19.0",
    "@types/node": "^22.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/express": "^5.0.0",
    "vitest": "^3.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "bmad",
    "mcp",
    "ai",
    "agile",
    "development",
    "methodology"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
